<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Contact Manager"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#1976D2"
            android:padding="12dp" />

        <!-- Name -->
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="10dp" />

        <!-- ID -->
        <EditText
            android:id="@+id/empId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID"
            android:inputType="number" />

        <!-- Department -->
        <Spinner
            android:id="@+id/dept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Save Button -->
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="#0F0101"
            android:background="#6D0576"
            android:layout_marginTop="8dp" />

        <!-- Grid of Employees -->
        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:numColumns="2"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:layout_marginTop="10dp" />

        <!-- Bottom Buttons -->
        <Button
            android:id="@+id/accountant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dial Accountant"
            android:textColor="#040000"
            android:background="#903E07"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Email"
            android:textColor="#140101"
            android:background="#C51B16"
            android:layout_marginTop="5dp" />

    </LinearLayout>
</ScrollView>
